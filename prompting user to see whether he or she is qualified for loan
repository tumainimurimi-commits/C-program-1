Description:promting the to enter age and income to see if he or she qualified fo a loan
*/
#include <stdio.h>

int main() {
    //variable declaration
    int age;
    float income;

    // Prompting the user for their age and income
    printf("Enter your age: ");
    scanf("%d", &age);

    printf("Enter your annual income sh: ");
    scanf("%f", &income);

    // Checking if the customer qualifies for a loan
    if (age >= 21 && income >= 21000) {
        printf("Congratulations you qualify for a loan.\n");
    } else {
        printf("Unfortunately, we are unable to offer you a loan at this time.\n");
    }

    return 0;
}
